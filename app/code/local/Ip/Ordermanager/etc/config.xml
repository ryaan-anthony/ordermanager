<config>
	<modules>
		<Ip_Ordermanager>
			<version>0.0.1</version>
		</Ip_Ordermanager>
	</modules>
	 <global>
        <models>
            <ordermanager>
                <class>Ip_Ordermanager_Model</class>
            </ordermanager>
        </models>
         <blocks>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Ip_Ordermanager_Block_Orders</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ip_Ordermanager before="Mage_Adminhtml">Ip_Ordermanager</Ip_Ordermanager>
                        <Truncate before="Mage_Adminhtml">Truncate</Truncate>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Ip_Ordermanager>
                    <files>
                        <default>Ip_Ordermanager.csv</default>
                    </files>
                </Ip_Ordermanager>
            </modules>
        </translate>
        <default>
        <ordermanager>
        <condition_name>order_export</condition_name>
        </ordermanager>
        </default>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <order_export>
                                            <title>Export Orders</title>
                                        </order_export>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
